{
  "name": "@gnosis/core",
  "version": "0.0.1",
  "type": "module",
  "description": "Gnosis Traceability System - Evidence-bounded verification engine",
  "main": "dist/index.js",
  "scripts": {
    "sanity": "vitest run test/sanity/",
    "test:sanity": "vitest run test/sanity/",
    "test": "vitest run",
    "test:pipeline:integration": "vitest run test/pipeline/pipeline.integration.test.ts --config vitest.integration.config.ts",
    "verify:gates": "vitest run test/verification/gates/",
    "verify:integrity": "vitest run test/verification/integrity/",
    "verify:env": "npx tsx scripts/verify-env.ts",
    "verify:infrastructure": "npx tsx scripts/verify-infrastructure.ts",
    "verify:track-a-entry": "npx tsx scripts/verify-track-a-entry.ts",
    "report:coverage": "vitest run --coverage",
    "build": "tsc",
    "migrate": "npx tsx src/db/migrate.ts",
    "migrate:neo4j": "npx tsx src/db/neo4j-migrate.ts",
    "validate:a1": "npx tsx scripts/validate-a1-exit.ts",
    "validate:a2": "npx tsx scripts/validate-a2-exit.ts",
    "extract:a1": "npx tsx scripts/run-a1-extraction.ts",
    "sync:neo4j": "npx tsx scripts/sync-to-neo4j.ts",
    "lint:markers": "./scripts/lint-markers.sh",
    "calibrate:tdds": "npx tsx scripts/calibrate-tdds.ts",
    "verify:organ-parity": "npx tsx scripts/verify-organ-parity.ts",
    "verify:track-milestone": "npx tsx scripts/verification/verify-track-milestone.ts",
    "verify:expectation-drift": "npx tsx scripts/verification/expectations/drift-detector.ts",
    "verify:cross-store": "npx tsx scripts/verification/reconcilers/cross-store-reconciler.ts",
    "verify:scripts-boundary": "npx tsx scripts/verify-scripts-boundary.ts"
  },
  "dependencies": {
    "dotenv": "^16.4.1",
    "glob": "^13.0.0",
    "neo4j-driver": "^5.17.0",
    "pg": "^8.11.3",
    "remark-parse": "^11.0.0",
    "ts-morph": "^21.0.1",
    "unified": "^11.0.4",
    "yaml": "^2.8.2"
  },
  "devDependencies": {
    "@types/node": "^20.11.16",
    "@types/pg": "^8.11.0",
    "ts-node": "^10.9.2",
    "tsx": "^4.21.0",
    "typescript": "^5.3.3",
    "vitest": "^1.2.2"
  },
  "engines": {
    "node": ">=20.0.0"
  }
}


